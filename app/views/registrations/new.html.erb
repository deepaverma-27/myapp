<%if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <%end%>
<% end %>
<%= form_with model:@user do |form| %>
  <div>
    <%= form.label :Name %></br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :Email %></br>
    <%= form.text_field :email %>
  </div>

    <div>
    <%= form.label :Gender%></br>
    <%= form.select :gender,User.genders.keys %>
  </div>

  <div>
    <%= form.label :Password%></br>
    <%= form.text_field :password,type: 'password'%>
  </div>
  <div>
    <%= form.label :confirmation_password%></br>
    <%= form.text_field :confirmation_password, type: 'password' %>
  </div>
  

  <div class="actions">
   <%=form.submit(@user.new_record? ? "sign up" : "update account") %>
 </div>
<% end %>